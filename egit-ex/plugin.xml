<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Git Action Set"
            visible="true"
            id="egit-ex.actionSet">
         <menu
               label="Git Extras"
               id="gitMenu">
            <separator
                  name="gitGroup">
            </separator>
         </menu>
         <action
               class="egitex.actions.SvnRebaseAction"
               icon="icons/pull.gif"
               id="egitex.actions.SvnRebaseAction"
               label="Pull from svn"
               menubarPath="gitMenu/gitGroup"
               toolbarPath="gitGroup"
               tooltip="Fetch and rebase  new commits from svn (active branch)">
         </action>
         <action
               label="Push to svn"
               icon="icons/push.gif"
               class="egitex.actions.SvnDcommitAction"
               tooltip="Push  new commits  to svn (active branch) "
               menubarPath="gitMenu/gitGroup"
               toolbarPath="gitGroup"
               id="egitex.actions.SvnDcommitAction">
         </action>
         <action
               class="egitex.actions.SvnFetchAction"
               icon="icons/fetch.gif"
               id="egitex.actions.SvnFetchAction"
               label="Fetch from svn"
               menubarPath="gitMenu/gitGroup"
               toolbarPath="gitGroup"
               tooltip="Fetch  new commits from svn (all branches)">
         </action>
      </actionSet>
   </extension>

</plugin>
